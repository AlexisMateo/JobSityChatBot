@model LoginViewModel

<div class="login-form">
    <form asp-controller="Authentication" asp-action="Login" method="POST">
        <input type="hidden" asp-for="ReturnUrl"/>
        <h2 class="text-center">Log In</h2>       
        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Username" required="required"/>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required"/>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Log In</button>
        </div>     
    </form>
    <p class="text-center">
        <a asp-controller="Authentication" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Create an account</a>
    </p>
</div>