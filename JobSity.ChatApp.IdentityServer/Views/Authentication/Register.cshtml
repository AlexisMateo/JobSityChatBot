@model RegisterViewModel

<div class="login-form">
    <form asp-controller="Authentication" asp-action="Register" method="POST">
        <input type="hidden" asp-for="ReturnUrl"/>
        <h2 class="text-center">Register</h2>       
        <div class="form-group">
            <input asp-for="UserName" class="form-control" placeholder="Username" required="required"/>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Password" required="required"/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" required="required"/>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Register</button>
        </div>     
    </form>
    <p class="text-center">
        <a asp-controller="Authentication" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Log In</a>
    </p>
</div>